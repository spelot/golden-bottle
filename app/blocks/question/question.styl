.question
	display block
	width 100%

	&__text
		font-family baseFontBold
		font-size 30px
		color blackColor
		line-height 40px
		text-align center

		@media (max-width: mediaFirstPoint)
			font-size 20px
			line-height 30px

	&__description
		width 627px
		height 80px
		font-family baseFont
		font-weight bold
		font-size 14px
		line-height 22px
		letter-spacing 1px
		text-align center
		text-transform uppercase
		margin 0 auto

		@media (max-width: mediaFirstPoint)
			max-width 627px
			height auto
			width 100%
