.header
	position relative
	display block
	max-width 2000px
	width 100%

	&__bar
		height 50px
		background-color goldenColor

		@media (max-width: mediaFirstPoint)
			height 25px

		@media (max-width: mediaSecondPoint)
			height 10px

		&_black
			height 100px
			background-color blackColor

			@media (max-width: mediaFirstPoint)
				height 50px

			@media (max-width: mediaSecondPoint)
				height 20px
