.logotype
	display block
	position absolute
	top 20px
	left 50%
	transform translateX(-50%)

	@media (max-width: mediaFirstPoint)
		width 80px
		height 80px

	@media (max-width: mediaSecondPoint)
		width 30px
		height 30px
		top 5px

	svg
		@media (max-width: mediaFirstPoint)
			width 100%
			height 100%

	&__link
		display block

	&__image:hover
		path
			transition fill 0.3s
			fill goldenColor
